email "#VAR:general_mail_admin:VAR#@#VAR:general_domain_default:VAR#"

order authenticate before respond
order authorize before basicauth

servers :80 {
	name http
	listener_wrappers {
		proxy_protocol {
			timeout 2s
			allow "#VAR:network_docker_ipv4:VAR#"
		}
	}
}

servers :443 {
	name https
	listener_wrappers {
		proxy_protocol {
			timeout 2s
			allow "#VAR:network_docker_ipv4:VAR#"
		}
		tls
	}
}
