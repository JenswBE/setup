email "{{ general_mail_admin }}@{{ general_domain_default }}"

order authenticate before respond
order authorize before basicauth

servers :80 {
	name http
	listener_wrappers {
		proxy_protocol {
			timeout 2s
			allow "{{ network_docker_ipv4 }}"
		}
	}
}

servers :443 {
	name https
	listener_wrappers {
		proxy_protocol {
			timeout 2s
			allow "{{ network_docker_ipv4 }}"
		}
		tls
	}
}
