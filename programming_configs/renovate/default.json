{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["html"],
  "html": {
    "enabled": true,
    "fileMatch": ["\\.(go)?html?$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
